{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["../../packages/shared/src/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/index.ts"
    }
  ],
  "installCommand": "cd ../.. && npm install",
  "buildCommand": "cd ../.. && npm run build:shared",
  "crons": [
    {
      "path": "/cron/release-expired",
      "schedule": "0 0 * * *"
    }
  ]
}